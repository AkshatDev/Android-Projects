<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">



    <ListPreference
        android:defaultValue="@string/settings_name_default"
        android:entries="@array/settings_name_labels"
        android:key="@string/settings_name_key"
        android:entryValues="@array/settings_name_values"
        android:title="@string/settings_name_label" />
    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

</PreferenceScreen>